<html>
  <head>
    <title>Node Todo</title>
    <link rel="stylesheet" href="/public/bootstrap.css" />
    <link rel="stylesheet" href="/public/app.css" />
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <a href="#" class="navbar-brand">Node Todo</a>
    </div>
    <div class="container">
      <div id="dashboard">
        <script type="template" id="todotemplate">
          <div class="row">
            <input class="col-md-8 description"
                   type="text"
                   placeholder="Enter todo"
            />
            <div class="col-md-2">
              <a href="javascript:;" class="save">save</a>
            </div>
            <div class="col-md-2">
              <a href="javascript:;" class="done">done</a>
            </div>
          </div>
        </script>
        <div id="todos"></div>
      </div>
    </div>
    <script src="/public/jquery-1.8.0.js"></script>
    <script src="/public/bootstrap.js"></script>
    <script src="/public/app.js"></script>
  </body>
</html>
